{
	"max_idle_time": 10,		// Seconds the user may be idle before the timeer for the current job is halted. A value of zero means to omit idle time detection.
	"stop_on_suspend" : false,	// Halt the current job when to computer goes to suspend. Usually, there is very little sense in diabling this.
	"detect_ambiguity" : false,	// Detect ambigous job definitions at runtime, e.g. if more than one job matches the current workspace/window title combination
	"socket_path": "%doodle_user_communication"
}
